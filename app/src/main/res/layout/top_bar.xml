<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/themeCorol"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/topBar_left"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topBar_close"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topBar_skin"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_skin"
        android:visibility="gone" />

    <TextView
        android:id="@+id/topBar_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="计划列表"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/topBar_right"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="9dp"
        android:src="@drawable/icon_course_add"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topBar_edit"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="9dp"
        android:src="@drawable/icon_edit"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topBar_save"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="9dp"
        android:src="@drawable/icon_save_blue"
        android:visibility="gone" />


</LinearLayout>