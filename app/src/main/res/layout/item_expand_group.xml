<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:id="@+id/enStart_background"
        style="@style/planlist_bar_background"
         />

    <TextView
        android:id="@+id/text_enStart"
        app:layout_constraintBottom_toBottomOf="@id/enStart_background"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        style="@style/planlist_bar_text"
        android:text="@string/enStart" />

    <TextView
        android:id="@+id/enStart_number"
        style="@style/planlist_bar_text"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/text_enStart"
        app:layout_constraintTop_toTopOf="@id/text_enStart"
        android:text="(4)" />

    <TextView
        android:id="@+id/jiantou"
        style="@style/enStart_jiantou"
        app:layout_constraintBottom_toBottomOf="@+id/text_enStart"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        />

</android.support.constraint.ConstraintLayout>